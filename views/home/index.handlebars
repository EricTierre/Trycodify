    <div id="Ganho"></div>

    <div class="mt-5 row">
        <div class="col-2">

            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
