    <div class="btn btn-success mt-2 mb-5" onclick="codificacao()">Codificar</div>


    <div class="font-weight-bold">Texto codificado: </div>
    <input type="text" class="form-control shadow" aria-label="codificado" aria-describedby="basic-addon1"
        id="descodificar">
    <div class="btn btn-success mt-2" onclick="descodificacao()">Descodificar</div>

    <input type="hidden" id="salva-grafo">
    <input type="hidden" id="salva-vetor">

    <div id="tamanho_original" class="mt-3"></div>
